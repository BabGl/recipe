<p>
<h1>Nieuw recept maken</h1>

</p>

<% if @recipe.errors.any? %>
<div class="row">
  <div class="alert alert-danger col-md-8 col-md-offset-2">
    <h5>Gelieve de volgende fouten te verbeteren</h5>
    <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>


<div class="row">
  <div class="well col-md-8 col-md-offset-2">
  
  <%= form_for Recipe.new do |f| %>
  <%= f.label :Naam %>
  <%= f.text_field :name %>
  
  <%= f.label :Overzicht %>
  <%= f.text_field :summary %>
  
  <%= f.label :Descriptie %>
  <%= f.text_area :description %>
  
  <%= f.submit 'Recepten aanmaken', class: "btn btn-success" %>
  
  <% end %>
  
</div>
</div>