<%= render 'shared/errors', obj: @recipe %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
  
  <%= form_for Recipe.new do |f| %>
  <%= f.label :Naam %>
  <%= f.text_field :name %>
  
  <%= f.label :Overzicht %>
  <%= f.text_field :summary %>
  
  <%= f.label :Descriptie %>
  <%= f.text_area :description, row: 10%>
  
  <%= f.submit(@recipe.new_record??  'Recepten aanmaken' : 'Recept bewerken', class: "btn btn-success") %>
  
  <% end %>
  
</div>
</div>